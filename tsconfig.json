{
  "compilerOptions": {
    "baseUrl": "src", // add these to improve module resolves
    "outDir": "dist",
    "noImplicitAny": true,
    "module": "esnext",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "lib": ["dom","esnext"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strictNullChecks": false,
  },
  "include": ["src/**/*", "index.d.ts"], // add these to improve module resolves
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint"],
}
